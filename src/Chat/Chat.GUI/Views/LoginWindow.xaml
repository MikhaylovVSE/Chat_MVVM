<Window x:Class="Chat.GUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.GUI.Views"
        xmlns:vm="clr-namespace:Chat.GUI.ViewModels"
        mc:Ignorable="d"
        Title="Log in as..." Height="150" Width="250" ResizeMode="NoResize" WindowStyle="ToolWindow">
  <Window.DataContext>
    <vm:LoginWindowViewModel />
  </Window.DataContext>
  <Grid>
    <StackPanel Orientation="Horizontal" Height="17" Margin="0,10,0,0" VerticalAlignment="Top">
      <TextBlock Text="Nickname: " />
      <TextBox MinWidth="100" Text="{Binding User.Nickname}" />
    </StackPanel>
    <Button Content="Sign in" HorizontalAlignment="Left" Margin="65,60,0,0" VerticalAlignment="Top" Width="75"/>
  </Grid>
</Window>
